<div class="map">
    <div id="map-canvas"></div>
</div>

<div class="content-box">
    <div class="wrap">
        <ul class="events">
            <li class="active"><a href="#">Eventos</a></li> 
            <% if usuario_signed_in? && current_usuario.lojista? %>
              <li><%= link_to 'Cadastro de Eventos', eventos_path %></li>
            <% end %>
        </ul>
        <div class="content-box-left">
          <%= form_for home_eventos_path, html: { id: "form_eventos" } ,remote: true  do |f| %>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <%= render "locais/pesquisa_estado_esporte", f: f %>
          <% end %>
        </div>
    </div>
    <div class="clear"></div>
</div>

<div class="main">
    <div class="wrap" id="paginate_itens">
      <%= render "locais.html", locais: @locais %>
    </div>
    <div class="clear"></div>
</div>

<%= will_paginate @locais, :remote => true  %>
