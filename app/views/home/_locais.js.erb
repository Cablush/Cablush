<% if @clear %>
  $("#paginate_itens").empty();
  CablushShowMap.clearLocations();
<% end %>

$("#paginate_itens").append(" <%= j render "locais.html", locais: @locais %> ");
CablushShowMap.loadLocations(<%= locais_to_json @locais %>);

<% if @locais.next_page %>
  $('.wrap_paginate').html('<%= j will_paginate @locais, :remote => true %>');
<% else %>
  <%#*$(window).off('scroll');%>
  $('.wrap_paginate').html('');
<% end %>