<% if @filter %>
  $("#paginate_itens").empty();
<% end %>

$("#paginate_itens").append(" <%= j render "locais.html", locais: @locais %> ");

<% if @locais.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate @locais, :remote => true %>');
<% else %>
  $(window).off('scroll');
  $('.pagination').remove();
<% end %>