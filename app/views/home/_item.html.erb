<% itens.each_with_index do |item, i| %>
  <% if i % 3 == 0 %>
    <div class="section group">
  <% end %>

    <div class="col_1_of_3 span_1_of_3">
        <% unless item.logo.nil? %>
          <center><a href="<%= item.site %>">
              <%if item.fundo? %>
                <%= image_tag item.logo.url(:small) ,:style => "background-color:#000" %>
              <% else %>
                <%= image_tag item.logo.url(:small) %>
              <% end %>
          </a></center>
          <ul class="m_fb">
              <li>
                  <span class="m_22">
                      <center>
                          <a href="<%= item.facebook ||="#" %>"><%= image_tag "fb.png"%></a>
                      </center>
                  </span>
                  <%# if usuario_signed_in? && current_usuario.logista? %>
                    <!-- <span class="m_23"><a href="#"><%= image_tag("heart.png") %></a></span> -->
                  <%# end %>
                  <div class="clear"></div>
              </li>
          </ul>
        <%end%>
        <div class="desc">
            <h3><%= item.nome %></h3>
            <h4 class="m_2"><%= item.contato %></h4>
            <h5 class="m_3"><%= item.local.nil? ? "" : item.local.logradouro %></h5>
            <p><%= item.descricao %></p>
        </div>
    </div>

  <% if (i+1) % 3 == 0 %> 
    </div>
  <% end %>

  <% if itens.length == (i+1) %>
    <div class="clear"></div>
  <% end %>

  <script type="text/javascript" >
  <% unless item.local.nil? %>
      setMarker(<%= item.local.latitude %>,<%= item.local.longitude %>);
  <% end %>
  </script>
<% end %>
