<ul class="list1">
  <% @categorias.each do |categoria| %>
    <li>
      <div class="elem-list">
        <div class="title_list">
          <%= t('views.cadastros.categoria_nome', categoria: categoria.nome) %>
          <label class="tip">
            <%= t('views.cadastros.participantes_numero',
              length: categoria.participantes.length) %>
          </label>
        </div>
        <ul class="item_list">
          <% categoria.participantes.each do |participante| %>
            <li>
              <%= t('views.cadastros.item_participante',
                participante: participante.nome,
                inscricao: participante.numero_inscricao,
                classificacao: participante.classificacao) %>
            </li>
          <% end %>
        </ul>
      </div>
    </li>
  <%end%>
</ul>
