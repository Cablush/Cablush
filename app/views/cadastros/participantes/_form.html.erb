<center>
<input style="width:50%" id="lightbox_show" type="button" class="btn1 btn-primary btn-normal btn-inline" value="Cadastrar Participantes" />
</center>
<div id="light" class="white_content">
<a id="lightbox_hide" href="javascript:void(0)"  class="textright">X</a>
  <div class="modal-body">
  <center>Cadastrar Participantes para o campeonato </center>
  <%= fields_for :participantes, Participante.new do |n|%>
    <form id="participant_form">
      <div class="form-inputs">
        <div class="field">
         <label>Categoria</label>
         <%= select("categoria", "categoria_id", @categorias.collect {|c| [ c.nome, c.id ] }, {:prompt => t('views.cadastros.categoria') }, {:class=>'frm-field required'}) %>
        </div>
        <div class="field">
         <label>Nome</label>
         <input type="text" id="nome" name="nome" class="inputbox" maxlength="50">
        </div>
        <div class="field">
         <label>Numero Inscrição</label>
         <input type="text" id="num_inscricao" name="num_inscricao" class="inputbox"min="1">
        </div>
        <div class="field">
         <label>Classificação</label>
         <input type="number" id="classificacao" name="classificacao" class="inputbox" min="1" max="120">
        </div>
        <center>
          <button style="width:50%" id="btnAddProfile" class="auto_btn_participante_add btn1 btn-primary btn-normal btn-inline">Adicionar</button>
        </center>
      </div>
    </form>
  <% end %>
  </div>
</div>
<div id="fade" class="black_overlay"></div>

