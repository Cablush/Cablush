<%= render "layouts/content_header" %>

<%= render "header", option: 'New' %>

<div class="main">
    <div class="wrap">
      <div class="search_box">
       <%= select("categoria", "categoria_id", @categorias.collect {|c| [ c.nome, c.id ] }, {:prompt => t('views.cadastros.categoria') }, {:class=>'frm-field required'}) %>
      </div>
       <br/>
      <div>
        <center>Participantes Cadastrados</center>
        <% @categorias.each do |categoria| %>
          <p> Categoria <%= categoria.nome %></p>
          <br/>
          <ul id="list_participantes">
          <% Participante.where(categoria_id:categoria.id).each do |participante| %>
              <li> <%= participante.nome%></li>
          <% end %>
          </ul>
        <%end%>
      </div>
      </div>
      <%= render 'form' %> 
        <!-- <button id="btnAddProfile" class="auto_btn_participante_save btn1 btn-primary btn-normal btn-inline">Salvar participantes</button> -->
    </div>
    <div class="clear"></div>
</div>

<script type="text/javascript">
  $(document).ready(function() {        
    Participante.init();
  });
</script>