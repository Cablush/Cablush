<%= render "layouts/content_header" %>

<%= render "header", option: 'New' %>

<div class="main">
  <div class="wrap">
    <div class="col">
      <div class="row search_box">
        <div class="field pad-horizontal">
          <%= t('views.cadastros.campeonato_nome', campeonato: @campeonato.nome) %>
          <%= hidden_field_tag "campeonato_uuid", @campeonato.uuid %>
        </div>
        <div class="field pad-horizontal" >
          <%= t('views.cadastros.categoria') %>
          <%= select(:categoria, "categoria_uuid",
            @categorias.collect {|c| [ c.nome, c.uuid ] },
            {prompt: t('views.cadastros.categoria') }, {class: 'selectbox'}) %>
        </div>
        <div class="field pad-horizontal" >
          <%= render 'form' %>
        </div>
      </div>
    </div>
    <div id="lista_participantes">
      <%= render 'participantes' %>
    </div>
    <div class="clear"></div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    Utils.initModal();
    Participante.init();
  });
</script>
