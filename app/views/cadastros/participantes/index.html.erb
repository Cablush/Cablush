<%= render "layouts/content_header" %>

<%= render "header", option: 'New' %>

<div class="main">
  <div class="wrap">
    <div class="search_box search_box_content float-lt">
      <div class="field pad-horizontal title_list">
        <%= t('views.cadastros.campeonato_nome', campeonato: @campeonato.nome) %>
        <%= hidden_field_tag "campeonato_uuid", @campeonato.uuid %>
      </div>
      <div class="field pad-horizontal" >
        <%= select(:categoria, "categoria_id",
          @categorias.collect {|c| [ c.nome, c.id ] },
          {prompt: t('views.cadastros.select_categoria')}, {class: 'selectbox'}) %>
      </div>
      <div class="field pad-horizontal" >
        <input type="button" value="<%= t('views.cadastros.add_participante') %>"
          class="btn_auto btn_participante_add btn-inline" />
        <%= render 'form' %>
      </div>
    </div>
    <div id="lista_participantes" class="float-lt">
      <%= render 'participantes' %>
    </div>
    <div class="clear"></div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    Utils.initModal();
    Participante.init();
  });
</script>
