<div class="content-head">
    <div class="wrap">
        <ul class="events">
            <li class="<%= is_active(cadastros_lojas_path, true)%> ">
              <%= link_to 'Lojas', cadastros_lojas_path %>
            </li>
            <% if request.path.try(:ends_with?, 'edit') %>
              <li class='active'>
                <a href="#">Editar Loja</a>
              </li>
            <% else %>
              <li class='<%= is_active(new_cadastros_loja_path, true)%>'>
                <%= link_to 'Nova Loja', new_cadastros_loja_path %>
              </li>
            <%  end %>
        </ul>
        <div class="clear"></div>
    </div>
</div>