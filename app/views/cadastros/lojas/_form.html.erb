<%= form_for [:cadastros, @loja], html: { multipart: true } do |f| %>

  <%= render "layouts/error_messages", :target => @loja %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome, class: 'inputbox' %>
  </div>
  <div class="field">
    <%= f.label :telefone %><br>
    <%= f.text_field :telefone, class: 'inputbox maskTel'  %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, class: 'inputbox'  %>
  </div>
  <div class="field">
    <%= f.label :website %><br>
    <%= f.text_field :website, class: 'inputbox'  %>
  </div>
  <div class="field">
    <%= f.label :facebook %><br>
    <%= f.text_field :facebook, class: 'inputbox'  %>
  </div>
  <div class="field">
    <%= f.label :logo %><br>
    <%= f.file_field :logo %><br>
    <%= image_tag @loja.logo.url(:small), :class => @loja.fundo? ? "fundo" : nil %>
  </div>
  <div class="field">
    <%= f.label :fundo %>
    <%= f.check_box :fundo %>
  </div>
  <div class="field">
    <%= f.label :descricao %><br>
    <%= f.text_area :descricao, class: 'textarea-box', :maxlength => 500,
      :cols => 5, :rows => 10 %>
    <div class="textcount"><span>500</span> <%= f.label :chars_remaining %></div>
  </div>
  <fieldset class="subfields">
      <legend>
        <%= f.label :esportes %>
        <span class="tip"> <%= t 'views.cadastros.esportes_tip' %></span>
      </legend>
      <%= render 'esportes/esportes_fields', f: f, esportes: @loja.esportes %>
  </fieldset>
  <fieldset class="subfields">
      <legend><%= f.label :endereco %></legend>
      <%= f.fields_for :locais do |local_form| %>
        <%= render 'locais/local_fields', f: local_form, type: 'Loja' %>
      <% end %>
  </fieldset>
  <fieldset class="subfields">
      <legend><%= f.label :horario %></legend>
      <%= f.fields_for :horario do |horario_form| %>
        <%= render 'horarios/horario_fields', f: horario_form %>
      <% end %>
  </fieldset>

  <div class="actions">
    <%= f.submit class: 'btn1 btn-primary btn-normal btn-inline' %>
  </div>
<% end %>
