<%= form_for [:cadastros, @pista], html: { multipart: true } do |f| %>
  
  <%= render "layouts/error_messages", :target => @pista %>

  <div class="field">
    <%= f.label 'Nome' %><br>
    <%= f.text_field :nome, class: 'inputbox' %>
  </div>
  <div class="field">
    <%= f.label 'Descrição' %><br>
    <%= f.text_area :descricao, class: 'textarea-box', :maxlength => 500, :cols => 5, :rows => 10 %>
    <div class="textcount"><span>500</span> caracteres restantes</div>
  </div>
  <div class="field">
    <%= f.label 'Site' %><br>
    <%= f.text_field :website, class: 'inputbox'  %> 
  </div>
  <div class="field">
    <%= f.label 'Facebook' %><br>
    <%= f.text_field :facebook, class: 'inputbox'  %>
  </div>
  <div class="field">
    <%= f.label 'Foto' %><br>
    <%= f.file_field :foto %><br>
    <%= image_tag @pista.foto.url(:small), :class => @pista.fundo? ? "fundo" : nil %>
  </div>
  <div class="field">
    <%= f.label 'Fundo Preto' %>
    <%= f.check_box :fundo %>
  </div>
  <fieldset class="subfields">
      <legend>Esportes</legend>
      <%= render 'esportes/esportes_fields', f: f, esportes: @pista.esportes %>
  </fieldset>
  <fieldset class="subfields">
      <legend>Endereço</legend>
      <%= f.fields_for :local do |local| %>
        <%= render 'locais/local_fields', f: local %>
      <% end %>
  </fieldset>
  <fieldset class="subfields">
      <legend>Horário de Funcionamento</legend>
      <%= f.fields_for :horario do |h| %>
        <%= render 'horarios/horario_fields', f: h %>
      <% end %>
  </fieldset>

  <div class="actions">
    <%= f.submit 'Confirmar', class: 'btn1 btn-primary btn-normal btn-inline' %>
  </div>
<% end %>
