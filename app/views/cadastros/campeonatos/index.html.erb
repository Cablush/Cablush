<%= render "layouts/content_header" %>

<%= render "header", option: 'List' %>

<div class="main">
  <div class="wrap">
    <ul class="list1 mark_green">
      <% @campeonatos.each do |campeonato| %>
        <li>
          <div class="elem-list">
            <div class="title_list txt-list">
              <%= link_to "#{campeonato.nome} - #{campeonato.data_inicio}",
                edit_cadastros_campeonato_path(campeonato) %>
            </div>
            <%= button_to t('views.cadastros.gerenciar_participantes'),
              cadastros_campeonato_participantes_path(campeonato), method: "get",
              class: "btn1 btn-list", form_class: "float-rt pad-right" %>
            <%= button_to t('views.cadastros.gerenciar_campeonato'),
              cadastros_campeonatos_path, method: "get",
              class: "btn1 btn-list", form_class: "float-rt pad-right" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="clear"></div>
</div>

