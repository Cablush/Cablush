
<input id="lightbox_show" type="button" value="Cadastrar Participantes" />

<div id="light" class="white_content">
<a id="lightbox_hide" href="javascript:void(0)"  class="textright">X</a>
  <div class="modal-body">
  <center>Cadastrar Participantes para o campeonato <strong><%=champ.nome%></strong> </center>
  <%= fields_for :participantes, Participante.new do |n|%>
    <div id="error_explanation" style="display:none;">
    </div>
    <div class="form-inputs">
    
          <div class="field">
           <label>Categoria</label>
           <%= select("post", "categoria_id", Categoria.where(campeonato_id: champ.id).collect {|c| [ c.nome, c.id ] }, { include_blank: true }) %>
          </div>          
          <div class="field">
           <label>Nome</label>
           <input type="text" id="nome" class="inputbox" maxlength="50">
          </div>
          <div class="field">
           <label>Numero Inscrição</label>
           <input type="text" id="num_inscricao" class="inputbox"min="1">
          </div>
          <div class="field">
           <label>Classificação</label>
           <input type="number" id="classificacao" class="inputbox" min="1" max="120">
          </div>
        <button id="btnAddProfile" class="auto_btn_participante_add btn1 btn-primary btn-normal btn-inline">Adicionar</button>
        <div>
          Participantes Cadastrados
          <ul id="list_participantes">
            <li>teste</li>
          </ul>
        </div>  

        <button id="btnAddProfile" class="auto_btn_participante_save btn1 btn-primary btn-normal btn-inline">Salvar participantes</button>
    </div>
  <% end %>
  </div>
</div>
<div id="fade" class="black_overlay"></div>

