<ul>
  <% @etapas.each do |etapa| %>
    <li>
      <div class="elem-list">
        <div class="title_list">
          <%= t('views.cadastros.etapa_nome', etapa: etapa.nome) %>
          <label class="tip">
            <%= t('views.cadastros.provas_numero', length: etapa.provas.length) %>
          </label>
        </div>
        <div class="games">
          <%= render 'provas', provas: etapa.provas %>
        </div>
      </div>
    </li>
  <% end %>
</ul>
