<!DOCTYPE html>
<html>
    <head>
        <title><%= full_title(@title) %></title>
        <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
        <%= javascript_include_tag "application" , "data-turbolinks-track" => true %>
        <%= csrf_meta_tags %>
        <%= favicon_link_tag 'favicon.ico' %>

        <meta name="description" content="<%= cablush_description %>">
        <meta name="keywords" content="<%= cablush_keywords %>">
        <meta name="robots" content="index,follow">
        <meta name="author" content="Cablush">

        <% if content_for?(:meta_tags) %>
          <%= yield(:meta_tags) %>
        <% else %>
          <meta property="og:url" content="<%= request.base_url %>" />
          <meta property="og:title" content="Cablush - Esportes, lugares e eventos." />
          <meta property="og:description" content="<%= cablush_description %>" />
          <meta property="og:image" content="<%= image_url("fb_cover.png") %>" />
        <% end %>
        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Cablush"/>
        <meta property="fb:app_id" content="<%= Rails.application.secrets.facebook_key %>" />
    </head>
    <body class="<%= controller_name %> <%= action_name %>">

        <%= render "layouts/menu"%>

        <%= render "layouts/message"%>

        <%= yield %>

        <%=render "layouts/footer"%>

        <div class="modal"></div>

        <div class="dialog"></div>

        <script type="text/javascript">
          window.api_key = "<%= Rails.application.secrets.js_api_key %>";
          window.maps_mark_orange = "<%= asset_path("ic_mark_cablush_orange_32.png") %>";
          window.maps_mark_blue = "<%= asset_path("ic_mark_cablush_blue_32.png") %>";
          window.maps_mark_green = "<%= asset_path("ic_mark_cablush_green_32.png") %>";
          window.facebook_key = "<%= Rails.application.secrets.facebook_key %>";
          window.facebook_cover = "<%= image_url("fb_cover.png") %>";
          window.google_key = "<%= Rails.application.secrets.google_key %>";
          window.geonames_user = "<%= Rails.application.secrets.geonames_user %>";

          $(document).ready(function() {
            Facebook.loadSDK();
            Utils.setup();
            Utils.initDialog();
          });
        </script>

        <script type="text/javascript">
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

          ga('create', '<%= Rails.application.secrets.analytics_id %>', 'auto');
          ga('send', 'pageview');
        </script>
    </body>
</html>
