<!-- Facebook -->
<a href="https://www.facebook.com/dialog/share?app_id=<%= Rails.application.secrets.facebook_key %>&display=popup&href=<%= request.original_url %>"
   class='fb_share btn-facebook btn1 btn-primary btn-normal btn-share'>
  <i class="fa fa-facebook fa-2x"></i>
  <span>Share</span>
</a>
<script type="text/javascript">
  //Utils.openPopup('.fb_share', 'Facebook');
  Facebook.loadShare('<%= request.original_url %>');
</script>

<!-- Twitter -->
<a href="https://twitter.com/share?url=<%= request.original_url %>&via=cablushApp&hashtags=cablush&text=<%= localizavel.share_message %>"
   class='tw_share btn-twitter btn1 btn-primary btn-normal btn-share'>
  <i class="fa fa-twitter fa-2x"></i>
  <span>Tweet</span>
</a>
<script type="text/javascript">
  Utils.openPopup('.tw_share', 'Share on Twitter');
</script>

<!-- Google -->
<a href="https://plus.google.com/share?url=<%= request.original_url %>"
   class='g_share btn-google btn1 btn-primary btn-normal btn-share'>
    <i class="fa fa-google-plus fa-2x"></i>
    <span>Share</span>
</a>
<script type="text/javascript">
  Utils.openPopup('.g_share', 'Share on Google+');
</script>

<!-- Pinterest -->
<script type="text/javascript" async defer src="//assets.pinterest.com/js/pinit.js"></script>
<a href="https://www.pinterest.com/pin/create/link/?url=<%= request.original_url %>&media=<%= picture_url %>&description=<%= localizavel.share_message %>"
   class='pn_share btn-pinterest btn1 btn-primary btn-normal btn-share'>
  <i class="fa fa-pinterest-p fa-2x"></i>
  <span>Pin it</span>
</a>
<script type="text/javascript">
  Utils.openPopup('.pn_share', 'Pinit on Pinterest');
</script>
