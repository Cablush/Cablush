                      <li><%= link_to 'Cadastros', home_cadastros_path %></li>
                    <% end %>
                    <div class="clear"></div>
                </ul>
            </nav>
        </div>
        
        <div class="buttons">
            <% if usuario_signed_in? %>
              <div class="login_name">
