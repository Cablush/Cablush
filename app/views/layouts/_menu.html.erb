<div class="header-top">
    <div class="wrap">
        <div class="logo">
            <a href="<%=home_index_path%>"> <%= image_tag("logo.png", size: "200x56") %></a>
        </div>
        
        <div class="cssmenu">
            <nav id="nav" role="navigation">
                <a href="#nav" title="Show navigation">Show navigation</a>
                <a href="#" title="Hide navigation">Hide navigation</a>
                <ul class="clearfix">
                    <li><%= link_to 'Home', home_index_path %></li>
                    <li><%= link_to 'Lojas', home_lojas_path %></li>
                    <li><%= link_to 'Eventos', home_eventos_path %></li>
                    <li><%= link_to 'Pistas', home_pistas_path %></li>
                    <!--<li><%#= link_to 'Blog', home_blog_path %></li>-->
