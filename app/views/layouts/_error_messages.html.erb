<% if target.errors.any? %>
  <div class="alert alert-error">
      <h2>Foram encontrados "<%= pluralize(target.errors.count, "erro") %>" no cadastro:</h2>
      <ul>
          <% target.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
      </ul>
  </div>
<% end %>
