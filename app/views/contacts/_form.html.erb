<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> erros ao tentar salvar:</h2>
      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Nome" %><br>
    <%= f.text_field :name, class: 'inputbox' %>
  </div>
  <div class="field">
    <%= f.label "Email" %><br>
    <%= f.text_field :email, class: 'inputbox'  %>
  </div>
  <div class="field">
    <%= f.label "Assunto" %><br>
    <%= f.text_field :subject, class: 'inputbox'  %>
  </div>
  <div class="field">
    <%= f.label "Mensagem" %><br>
    <%= f.text_area :message, class: 'textarea-box'  %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Enviar", class: 'btn1 btn-primary btn-normal btn-inline' %>
  </div>
<% end %>
