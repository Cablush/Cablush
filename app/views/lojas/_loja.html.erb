<div class="title">
  <% if loja.logo.exists? %>
    <%= image_tag loja.logo.url(:small), class: loja.fundo? ? "fundo" : nil, alt: loja.nome %>
  <% else %>
    <%= loja.nome %>
  <% end %>
</div>

<div class="desc">
    <%= loja.descricao %>
</div>

<div class="local_attr">
  <ul>
    <% if loja.telefone.present? %>
      <li>
        <i class="fa fa-phone"></i>
        <%=  loja.telefone %>
      </li>
    <% end %>
    <% if loja.email.present? %>
      <li>
        <%= mail_to loja.email do %>
          <i class="fa fa-envelope"></i>
          <%=  loja.email %>
        <% end %>
      </li>
    <% end %>
    <% if loja.website.present? %>
      <li>
        <%= link_to url_with_protocol(loja.website), :target => '_blank' do %>
          <i class="fa fa-link"></i>
          <%=  loja.website %>
        <% end %>
      </li>
    <% end %>
    <% if loja.facebook.present? %>
      <li>
        <%= link_to url_with_protocol(loja.facebook), target: '_blank' do %>
          <i class="fa fa-facebook-square"></i>
          <%=  loja.facebook %>
        <% end %>
      </li>
    <% end %>
    <% if local.endereco.present? %>
      <li>
        <i class="fa fa-building attr_ico"></i>
        <span class="attr_txt"><%=  local.endereco %></span>
      </li>
    <% end %>
    <% if dialog %>
      <li>
          <a href="https://www.facebook.com/dialog/feed?app_id=<%= Rails.application.secrets.facebook_key %>&display=popup&link=<%= lojas_url %>&picture=<%= loja.logo_url %>&name=<%= loja.share_message %>&redirect_uri=<%= lojas_url %>" 
             class='fb_share btn-facebook btn1 btn-primary btn-normal btn-share'>
            <i class="fa fa-facebook fa-2x"></i>
            <span>Share</span>
          </a>
          <script type="text/javascript">
            //Utils.openPopup('.fb_share', 'Facebook');
            Facebook.loadFeed('<%= loja.nome %>', '<%= lojas_url %>', '<%= loja.logo_url %>', '<%= loja.share_message %>', '<%= loja.share_message %>');
          </script>
          <a href="https://twitter.com/share?url=<%= lojas_url %>&via=cablushApp&hashtags=cablush&text=<%= loja.share_message %>"
             class='tw_share btn-twitter btn1 btn-primary btn-normal btn-share'>
            <i class="fa fa-twitter fa-2x"></i>
            <span>Share</span>
          </a>
          <script type="text/javascript">
              Utils.openPopup('.tw_share', 'Twitter');
          </script>
      </li>
    <% end %>
  </ul>
</div>
