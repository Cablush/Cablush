<%= render "locais/maps.html", locais: @locais %>

<div class="content-box">
    <div class="wrap">
        <ul class="events">
            <li class="active"><a href="#">Lojas</a></li>
        </ul>
        <div class="content-box-left">
          <%= form_for lojas_path, html: { id: "form_lojas" } ,remote: true do |f| %>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
            <%= render "locais/pesquisa_estado_esporte", f: f %>
          <% end %>
        </div>
    </div>
    <div class="clear"></div>
</div>

<div class="main">
    <div class="wrap row" id="paginate_itens">
      <%= render "locais/locais.html", locais: @locais %>
    </div>
    <div class="clear"></div>
</div>

<div class="wrap_paginate">
  <%= will_paginate @locais, :remote => true  %>
</div>