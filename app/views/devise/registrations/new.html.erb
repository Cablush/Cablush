<div class="content-head">
  <div class="wrap">
    <ul class="events">
      <li class="active"><a href="#"><%= t 'views.devise.cadastrar_head' %></a></li>
    </ul>
    <div class="clear"></div>
  </div>
</div>

<div class="main">
  <div class="wrap">
    <div class="wrap-content">
      <% unless usuario_signed_in? %>
        <%= simple_form_for :usuario, :url => registration_path(:usuario), html: { autocomplete: 'off' }  do |f| %>
          <%= devise_error_messages! %>

          <%= render "layouts/facebook_signin"%>
          <%= render "layouts/google_signin"%>

          <p class="txt-email"><%= t 'views.devise.cadastrar_email' %></p>
          <%= f.input :nome %>
          <%= f.input :email %>
          <%= f.input :password, autocomplete: "off", readonly: true,
            input_html: {onFocus: "this.removeAttribute('readonly');"} %>
          <%= f.input :password_confirmation, autocomplete: "off" %>

          <%= f.button :submit, value: t('button.cadastrar'),
            class: 'btn1 btn-primary btn-normal btn-inline' %>
        <% end %>
      <%else%>
        <% controller.redirect_to root_path(:registered => "true") %>
      <% end %>
    </div>
  </div>
  <div class="clear"></div>
</div>
